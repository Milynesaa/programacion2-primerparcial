<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.LearnHub" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Colores principales (mÃ¡s suaves para modo oscuro) -->
        <item name="colorPrimary">@color/primary_light</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Colores secundarios/accent -->
        <item name="colorSecondary">@color/accent_light</item>
        <item name="colorSecondaryVariant">@color/accent</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Backgrounds oscuros -->
        <item name="android:colorBackground">#121212</item>
        <item name="colorSurface">#1E1E1E</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Colores de error -->
        <item name="colorError">@color/error</item>
        <item name="colorOnError">@color/white</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">#1E293B</item>
        <item name="android:windowLightStatusBar">false</item>

        <!-- Navigation bar -->
        <item name="android:navigationBarColor">#1E1E1E</item>
        <item name="android:windowLightNavigationBar">false</item>

        <!-- Text colors para modo oscuro -->
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#B0B0B0</item>
        <item name="android:textColorHint">#808080</item>
    </style>
</resources>